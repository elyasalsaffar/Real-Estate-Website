<%- include('../partials/header.ejs') %>


<h2>Add New Listing</h2>
<form action="/listings" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" placeholder="e.g., Spacious Family Home" required />

    <label for="description">Description:</label>
    <textarea id="description" name="description" placeholder="Describe your property..." required></textarea>

    <label for="isForSale">Type:</label>
    <select id="isForSale" name="isForSale" required>
        <option value="">Select Type</option>
        <option value="true">For Sale</option>
        <option value="false">For Rent</option>
    </select>

    <label for="propertyType">Property Type:</label>
    <input type="text" id="propertyType" name="propertyType" placeholder="e.g., House, Apartment, Condo" required />

    <label for="bedrooms">Bedrooms:</label>
    <input type="number" id="bedrooms" name="bedrooms" placeholder="Number of bedrooms" min="0" required />

    <label for="bathrooms">Bathrooms:</label>
    <input type="number" id="bathrooms" name="bathrooms" placeholder="Number of bathrooms" min="0" required />

    <label for="areaSize">Area Size (sq ft/sq m):</label>
    <input type="number" id="areaSize" name="areaSize" placeholder="e.g., 1500" min="0" required />

    <label for="location">Location:</label>
    <input type="text" id="location" name="location" placeholder="e.g., New York, NY" required />

    <label for="images">Image URL (comma separated for multiple):</label>
    <input type="text" id="images" name="images" placeholder="e.g., http://example.com/img1.jpg, http://example.com/img2.jpg" required />

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" placeholder="e.g., 250000" min="0" required />

    <input type="hidden" name="status" value="available" />
    <input type="hidden" name="isApproved" value="false" />

    <input type="hidden" name="author" value="<%= user._id %>" />

    <button type="submit">Create Listing</button>
</form>


