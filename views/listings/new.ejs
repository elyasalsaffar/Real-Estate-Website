<%- include('../partials/header.ejs') %>

<!-- requires adjustment -->
<h2>Add New Listing</h2>
<form action="/listings" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" placeholder="Your property's title" required>

    <label for="description">Description:</label>
    <textarea name="description" id="description" placeholder="Describe your property..." required></textarea>

    <label for="isForSale">Listing Purpose:</label>
    <select name="isForSale" id="isForSale" required>
        <option value="">Select Type</option>
        <option value="true">For Sale</option>
        <option value="false">For Rent</option>
    </select>
    
    <label for="propertyType">Property Type:</label>
    <select name="propertyType" id="propertyType" required>
        <option value="">Select Property Type</option>
        <option value="Warehouse">Warehouse</option>
        <option value="Garage">Garage</option>
        <option value="Shop">Shop</option>
        <option value="Office">Office</option>
        <option value="Villa">Villa</option>
        <option value="Residential Building">Residential Building</option>
        <option value="Commercial Building">Commercial Building</option>
        <option value="Residential Apartment">Residential Apartment</option>
    </select>

    <label for="bedrooms">Bedrooms:</label>
    <input type="number" id="bedrooms" name="bedrooms" placeholder="Number of bedrooms" min="0" required>

    <label for="bathrooms">Bathrooms:</label>
    <input type="number" id="bathrooms" name="bathrooms" placeholder="Number of bathrooms" min="0" required>

    <label for="areaSize">Area Size (sq m):</label>
    <input type="number" id="areaSize" name="areaSize" placeholder="eg: 1500" min="0" required>

    <label for="location">Location:</label>
    <input type="text" id="location" name="location" placeholder="eg: Saar" required>

    <label for="images">Image URL (comma seperated for multiple):</label>
    <input type="text" id="images" name="images" placeholder="eg: http://example.com/img.jpg, http://example.com/img.jpg" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" placeholder="eg: 10000" min="0" required>

    <input type="hidden" name="author" value="<%= user._id %>">

    <button type="submit">Create Listing</button>
</form>
 
<%- include('../partials/footer.ejs') %>