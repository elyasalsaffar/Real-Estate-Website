<%- include('../partials/header.ejs') %>

<h2>Edit Listing</h2>

<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
  <input name="title" value="<%= listing.title %>" required>
  <textarea name="description" required><%= listing.description %></textarea>
  <input name="price" type="number" value="<%= listing.price %>" required>
  <select name="status">
    <option value="available" <% if (listing.status === 'available') { %>selected="selected"<% } %>>Available</option>
    <option value="sold" <% if (listing.status === 'sold') { %>selected="selected"<% } %>>Sold</option>
    <option value="pending" <% if (listing.status === 'pending') { %>selected="selected"<% } %>>Pending</option>
  </select>
  <button type="submit">Save Changes</button>
</form>

<a href="/listings/<%= listing._id %>">Back to listings</a>
<%- include('../partials/footer.ejs') %> 
